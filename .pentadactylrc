" Use homerow keys for hints (except ';')
set hintkeys=asdfglkjh

" Incremental search
set incfind

" Highlight searches
set hlfind

" Set google as the default search engine
set defsearch=google

" Use h/l to go to previous/next tab
map -builtin h <C-p>
map -builtin l <C-n>

" Use vim as my editor
set editor='rxvt -e "vim" <file>'
